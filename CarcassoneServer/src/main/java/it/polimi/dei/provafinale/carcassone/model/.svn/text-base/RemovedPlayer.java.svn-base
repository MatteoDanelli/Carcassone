package it.polimi.dei.provafinale.carcassone.model;

/**
 * This class represent a removed player.
 * A player was removed from a game when, for example, he disconnects from server or left the game.
 * @author Andrea Canidio
 *
 */
public class RemovedPlayer extends DisplayedPlayer {

	/**
	 * Initialize the player from ita color.
	 * @param flagColor color of the player to remove.
	 */
	public RemovedPlayer(Color flagColor) {
		super(flagColor, 0, 0);
	}

}
